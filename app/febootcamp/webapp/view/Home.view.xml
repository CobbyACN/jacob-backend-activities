<mvc:View controllerName="febootcamp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    <Page id="page" title="Fiori App">
        <content>
            <!-- HBox with Text and Button -->
            <HBox id="hboxx">
                <Text id="authorName" class="bigText" text="Hello, Jacob!" />
                <Button 
                    id="helloButton"
                    text="Click to say Hello!"
                    press="onButtonPress"
                    icon="sap-icon://message-popup"
                />
            </HBox>

            <!-- Panel with Book Chart (Dataset and Series selection) -->
            <Panel 
                id="booksPanel" 
                class="sapUiResponsiveMargin" 
                expandable="true" 
                expanded="true" 
                headerText="Book Chart" 
                width="auto">
                <content>
                    <!-- Dataset Selection -->
                    <VBox id="bookGraph" class="sapUiSmallMargin">
                        <Label id="datasetLabel" text="{/dataset/name}" design="Bold" class="sapUiTinyMarginBottom"/>
                        <RadioButtonGroup 
                            id="datasetRadioGroup"
                            columns="1"
                            select="onDatasetSelected">
                           
                        </RadioButtonGroup>
                    </VBox>

                    <!-- Series Selection -->
                    <VBox id="bookGraph2" class="sapUiSmallMargin">
                        <Label id="seriesLabel" text="{/series/name}" design="Bold" class="sapUiTinyMarginBottom"/>
                        <RadioButtonGroup 
                            id="seriesRadioGroup"
                            columns="1"
                            select="onSeriesSelected">
                            
                        </RadioButtonGroup>
                    </VBox>
                </content>
            </Panel>
        </content>

        <!-- Page Footer with Navigation Button -->
        <footer>
            <Toolbar id="footerToolbar">
                <Button 
                    id="nextButton"
                    text="Click Me to go to Page 2!"
                    press="onGoToPage2"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
