<mvc:View controllerName="febootcamp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    
    <Page id="page" title="Fiori App">
        <content>
           
            <HBox id="hboxx">
                <Text id="authorName" class="bigText" text="Hello, Jacob!" />
                <Button 
                    id="helloButton"
                    text="Click to say Hello!"
                    press="onButtonPress"
                    icon="sap-icon://message-popup"
                />
            </HBox>

           
            <Panel 
                id="booksPanel" 
                class="sapUiResponsiveMargin" 
                expandable="true" 
                expanded="true" 
                headerText="VizFrame Chart" 
                width="auto">
                <content>
    <viz:VizFrame id="idVizFrame"
                  uiConfig="{applicationSet:'fiori'}"
                  height="300px"
                  width="100%"
                  vizType="column"
                  vizProperties="{ title: { text: 'Created Clubs Monthly', visible: true } }">
        <viz:dataset>
            <viz.data:FlattenedDataset id="idVizDataset" data="{viz>/SalesData}">
                <viz.data:dimensions>
                    <viz.data:DimensionDefinition id="idDimMonth" name="Month" value="{viz>Month}" />
                </viz.data:dimensions>
                <viz.data:measures>
                    <viz.data:MeasureDefinition id="idMeasCreatedClubs" name="Created Clubs" value="{viz>Value}" />
                </viz.data:measures>
            </viz.data:FlattenedDataset>
        </viz:dataset>
        <viz:feeds>
            <viz.feeds:FeedItem id="idFeedValueAxis" uid="valueAxis" type="Measure" values="Created Clubs" />
            <viz.feeds:FeedItem id="idFeedCategoryAxis" uid="categoryAxis" type="Dimension" values="Month" />
        </viz:feeds>
    </viz:VizFrame>
</content>
            </Panel>
            <Panel id="Books1" class="panelStyle" expandable="true" expanded="true" headerText="List" width="auto">
                </Panel>
        </content>

        <!-- Page Footer with Navigation Button -->
        <footer>
            <Toolbar id="footerToolbar">
                <Button 
                    id="nextButton"
                    text="Click Me to go to Page 2!"
                    press="onGoToPage2"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
